<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".CodeCupApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodeCutCodeShit">
        <!-- Login & Signup -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SignupActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Màn hình chi tiết sản phẩm cà phê -->
        <activity
            android:name=".CoffeeDetailActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Màn hình giỏ hàng -->
        <activity
            android:name=".CartActivity"
            android:exported="false"
            android:parentActivityName=".CoffeeDetailActivity" />

        <!-- Màn hình đặt hàng thành công -->
        <activity
            android:name=".OrderSuccessActivity"
            android:exported="false" />

        <!-- Màn hình danh sách đơn hàng -->
        <activity
            android:name=".MyOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Màn hình Rewards -->
        <activity
            android:name=".RewardsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Màn hình Redeem Rewards -->
        <activity
            android:name=".RedeemActivity"
            android:exported="false"
            android:parentActivityName=".RewardsActivity" />

        <!-- Màn hình Profile -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Menu screen (copied from codecup) -->
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>