<?xml version="1.0" encoding="utf-8"?>
<!--
    LAYOUT MÀN HÌNH PROFILE

    Hiển thị và chỉnh sửa thông tin người dùng
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".ProfileActivity">

    <!-- ==================== HEADER ==================== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coffee_primary"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_coffee_cup"
            android:contentDescription="Logo"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="My Profile"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Nút Edit/Save -->
        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/white" />

    </RelativeLayout>

    <!-- ==================== NỘI DUNG ==================== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ===== AVATAR ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile"
                        android:background="@color/coffee_primary_light"
                        app:tint="@color/white"
                        android:padding="20dp"
                        android:contentDescription="Avatar" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Coffee Lover"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_member_since"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Member since Dec 2025"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- ===== PROFILE FORM ===== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Full Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_edit_text"
                        android:enabled="false"
                        android:hint="Enter your full name"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="12dp"
                        android:text="Coffee Lover"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <!-- Phone Number -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Phone Number"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_edit_text"
                        android:enabled="false"
                        android:hint="Enter your phone number"
                        android:inputType="phone"
                        android:paddingHorizontal="12dp"
                        android:text="+1 234 567 8900"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <!-- Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Email"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_edit_text"
                        android:enabled="false"
                        android:hint="Enter your email"
                        android:inputType="textEmailAddress"
                        android:paddingHorizontal="12dp"
                        android:text="coffee.lover@email.com"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                    <!-- Address -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Address"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_edit_text"
                        android:enabled="false"
                        android:hint="Enter your address"
                        android:inputType="textMultiLine"
                        android:lines="2"
                        android:minLines="2"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="12dp"
                        android:text="123 Coffee Street, Bean City"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ===== SAVE BUTTON (chỉ hiện khi edit mode) ===== -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/coffee_primary"
                android:visibility="gone" />

            <!-- ===== CANCEL BUTTON (chỉ hiện khi edit mode) ===== -->
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:text="Cancel"
                android:textColor="@color/coffee_primary"
                android:textSize="16sp"
                android:backgroundTint="@color/white"
                android:visibility="gone"
                style="?attr/materialButtonOutlinedStyle" />

        </LinearLayout>

    </ScrollView>

    <!-- ==================== BOTTOM NAVIGATION ==================== -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>

