<?xml version="1.0" encoding="utf-8"?>
<!--
    LAYOUT CHO ITEM TRONG GIỎ HÀNG (Full version)
    Có thêm nút +/- để điều chỉnh số lượng
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Hình ảnh sản phẩm -->
        <ImageView
            android:id="@+id/iv_cart_item_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_coffee_cup"
            android:scaleType="centerCrop"
            android:background="@color/background_light"
            android:contentDescription="Product image" />

        <!-- Thông tin sản phẩm -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/tv_cart_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee Name"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Chi tiết tùy chỉnh -->
            <TextView
                android:id="@+id/tv_cart_item_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Size M | Regular Cup | Less Ice"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Giá đơn vị -->
            <TextView
                android:id="@+id/tv_cart_item_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="$4.50 each"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <!-- Điều chỉnh số lượng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Nút giảm -->
                <ImageButton
                    android:id="@+id/btn_item_decrease"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_minus"
                    android:scaleType="center"
                    android:background="@drawable/bg_button_circle"
                    android:contentDescription="Decrease" />

                <!-- Số lượng -->
                <TextView
                    android:id="@+id/tv_cart_item_quantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Nút tăng -->
                <ImageButton
                    android:id="@+id/btn_item_increase"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_plus"
                    android:scaleType="center"
                    android:background="@drawable/bg_button_circle"
                    android:contentDescription="Increase" />

            </LinearLayout>

        </LinearLayout>

        <!-- Giá tổng của item -->
        <TextView
            android:id="@+id/tv_cart_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$4.50"
            android:textColor="@color/coffee_accent"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

