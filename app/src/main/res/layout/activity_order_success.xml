<?xml version="1.0" encoding="utf-8"?>
<!--
    LAYOUT MÀN HÌNH ĐẶT HÀNG THÀNH CÔNG (Order Success)
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:gravity="center"
    tools:context=".OrderSuccessActivity">

    <!-- Icon thành công -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_success"
        app:tint="@color/success_green"
        android:contentDescription="Success" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Order Placed!"
        android:textColor="@color/coffee_primary_dark"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Mô tả -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:text="Thank you for your order!\nYour coffee is being prepared."
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3" />

    <!-- Order Number -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_order_number"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Number"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="#12345"
            android:textColor="@color/coffee_primary"
            android:textSize="32sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Thời gian ước tính -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Estimated time: 10-15 minutes"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <!-- Nút Track My Order (Primary) -->
    <Button
        android:id="@+id/btn_track_order"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:text="Track My Order"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/coffee_primary" />

    <!-- Nút quay về Home (Secondary) -->
    <Button
        android:id="@+id/btn_back_to_home"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:text="Back to Home"
        android:textColor="@color/coffee_primary"
        android:textSize="16sp"
        android:backgroundTint="@color/card_background"
        style="?android:attr/borderlessButtonStyle" />

</LinearLayout>
