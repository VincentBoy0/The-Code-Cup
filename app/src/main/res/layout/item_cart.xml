<?xml version="1.0" encoding="utf-8"?>
<!--
    LAYOUT CHO MỘT ITEM TRONG GIỎ HÀNG
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Hình ảnh sản phẩm -->
    <ImageView
        android:id="@+id/iv_cart_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_coffee_cup"
        android:scaleType="centerCrop"
        android:contentDescription="Product image" />

    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tv_cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee Name"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Chi tiết tùy chỉnh -->
        <TextView
            android:id="@+id/tv_cart_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Size M | Regular Cup | Less Ice"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Số lượng -->
        <TextView
            android:id="@+id/tv_cart_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Qty: 1"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Giá -->
    <TextView
        android:id="@+id/tv_cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$4.50"
        android:textColor="@color/coffee_accent"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Nút xóa -->
    <ImageView
        android:id="@+id/iv_cart_item_remove"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_close"
        app:tint="@color/text_secondary"
        android:contentDescription="Remove item" />

</LinearLayout>

