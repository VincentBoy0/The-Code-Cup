<?xml version="1.0" encoding="utf-8"?>
<!--
    LAYOUT CHO MỘT ITEM TRONG DANH SÁCH CÀ PHÊ

    Layout này được sử dụng bởi CoffeeAdapter
    Mỗi sản phẩm cà phê sẽ hiển thị theo layout này
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Hình ảnh cà phê -->
        <ImageView
            android:id="@+id/iv_coffee"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_coffee_cup"
            android:contentDescription="Coffee image" />

        <!-- Thông tin cà phê -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <!-- Tên cà phê -->
            <TextView
                android:id="@+id/tv_coffee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee Name"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Mô tả -->
            <TextView
                android:id="@+id/tv_coffee_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Description"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <!-- Giá -->
            <TextView
                android:id="@+id/tv_coffee_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="$0.00"
                android:textColor="@color/coffee_accent"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Mũi tên chỉ hướng -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_secondary"
            android:contentDescription="View details" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

