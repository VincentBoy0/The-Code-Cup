<?xml version="1.0" encoding="utf-8"?>
<!--
    DIALOG HIỂN THỊ GIỎ HÀNG (Cart Preview)

    Hiển thị khi user click vào icon cart trên header
    Cho phép xem các item trong giỏ mà không cần chuyển màn hình
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/card_background"
    android:padding="20dp">

    <!-- Header của Dialog -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_cart"
            app:tint="@color/coffee_primary"
            android:contentDescription="Cart" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Cart Preview"
            android:textColor="@color/coffee_primary_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cart_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 items"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Nút đóng dialog -->
        <ImageView
            android:id="@+id/iv_close_dialog"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_close"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close" />

    </LinearLayout>

    <!-- Đường kẻ phân cách -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="#E0E0E0" />

    <!-- Danh sách items trong giỏ hàng - giới hạn chiều cao để cuộn -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cart_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_max="320dp"
            app:layout_constraintHeight_default="wrap" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Hiển thị khi giỏ hàng trống -->
    <LinearLayout
        android:id="@+id/layout_empty_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_cart"
            app:tint="@color/text_secondary"
            android:contentDescription="Empty cart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Your cart is empty"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Add some delicious coffee!"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Đường kẻ phân cách -->
    <View
        android:id="@+id/divider_total"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="#E0E0E0"
        android:visibility="gone" />

    <!-- Tổng tiền -->
    <LinearLayout
        android:id="@+id/layout_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total:"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cart_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="@color/coffee_accent"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Nút chuyển đến My Cart -->
    <Button
        android:id="@+id/btn_go_to_cart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Cart Detail"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/coffee_primary"
        android:visibility="gone" />

</LinearLayout>

