<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi enabled (edit mode) -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/coffee_primary" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Khi disabled (view mode) -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_grey" />
            <stroke android:width="1dp" android:color="@color/border_light" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>

